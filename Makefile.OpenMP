EXE = gppKerOpenMPFor
SRC = gppKerOpenMPFor.cpp 

CXX = CC

CXXFLAGS = -O3 -qopenmp -xCORE_AVX2
LINK = ${CXX}
LINKFLAGS = -dynamic -O3 -qopenmp

OBJ = $(SRC:.cpp=.o)

$(EXE): $(OBJ) 
	$(CXX) $(OBJ) -o $(EXE) $(LINKFLAGS)

$(OBJ): $(SRC) 
	$(CXX) -c $(SRC) $(CXXFLAGS)

clean: 
	rm -f *.o gppKerOpenMPFor
